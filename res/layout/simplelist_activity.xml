<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
    android:background="@color/general_back_color">
	
	<com.autonavi.xmgd.view.GDTitle
		android:id="@+id/title_simplelist"
		android:layout_width="wrap_content"
       	android:layout_height="@dimen/gdtitle_height" />

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_weight="1">

		<ListView
			android:id="@+id/list_listactivity"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent" 
			android:cacheColorHint="@color/general_list_back_color"
			android:background="@color/general_list_back_color"
			android:dividerHeight="0.5dip"
			android:divider="@color/list_driver_color"
			android:childDivider="@color/list_driver_color"/>

	</LinearLayout>

</LinearLayout>