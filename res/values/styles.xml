<resources>

    <style name="AppTheme" parent="android:Theme.Light" />

    <!-- 用户自定义dialog -->
    <style name="dialogContentTheme">
        <item name="android:textColor">@color/content_color</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="dialogBtn">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/btn_color</item>
        <item name="android:paddingTop">@dimen/dialog_btn_padding_top</item>
        <item name="android:paddingBottom">@dimen/dialog_btn_padding_buttom</item>
    </style>
</resources>